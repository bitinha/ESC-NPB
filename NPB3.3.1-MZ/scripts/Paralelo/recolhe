#!/usr/bin/env python3.8

import re
import fileinput

def findMaxTime(lista):
	ret = 0,0
	minimo = float("inf")
	for e,i in enumerate(lista):
		if e < minimo:
			minimo = e
			ret = e, i

	return ret



resultados = dict()
state=""

Class = ""
time = 0
mops = 0
exch = 0
f77 = ""
fflags = ""
threads = 0

for line in fileinput.input():
	
	if state == "bin":
		if match := re.search(r'\s*Class\s*=\s*(.*)',line):
			Class = match.group(1)
		elif match := re.search(r'\s*Time in seconds\s*=\s*(.*)',line):
			time = float(match.group(1))
		elif match := re.search(r'\s*Total threads\s*=\s*(.*)',line):
			threads = int(match.group(1))
		elif match := re.search(r'\s*Mop/s total\s*=\s*(.*)',line):
			mops = float(match.group(1))
		elif match := re.search(r'\s*F77\s*=\s*(.*)',line):
			f77 = match.group(1)
		elif match := re.search(r'\s*FFLAGS\s*=\s*(.*)',line):
			fflags = match.group(1)
		elif match := re.search(r'\s*--> total exch_qbc\s*:\s*([^\s]*)',line):
			exch += float(match.group(1))
		elif re.match(r'sys',line):
			if threads == 0: 
				state = ""
				continue
			exch = exch / threads
			d = {"Class":Class,"Time":time,"MOPS":mops,"F77":f77,"FFlags":fflags,"exch":exch,"threads":threads}
			l = resultados.get(Class+f77+fflags+str(threads),list())
			l.append(d)
			resultados[Class+f77+fflags+str(threads)]=l
			state = ""			
			Class = ""
			time = 0
			mops = 0
			f77 = ""
			fflags = ""
			exch = 0
			threads = 0


	elif re.match(r'\+ mpirun',line):
		state = "bin"



for lista in resultados.values():
	minimos = list()

	for e in lista:
		if len(minimos) < 5:
			minimos.append(e)
		else:
			time, i = findMaxTime(minimos)
			if time > e["Time"]:
				minimos[i] = e


	Class = minimos[0]["Class"]
	time = 0
	mops = 0
	exch = 0
	threads = minimos[0]["threads"]
	f77 = minimos[0]["F77"]
	fflags = minimos[0]["FFlags"]

	for e in minimos:
		time += e["Time"]
		mops += e["MOPS"]
		exch += e["exch"]

	mops = round(mops / len(minimos),3)
	time = round(time / len(minimos),3)
	exch = round(exch / len(minimos),3)

	print("Class: "+Class+"; Time: "+str(time)+"; MOP/S: "+str(mops)+"; F77: "+f77+"; FFlags: "+fflags+"; Comm: "+str(exch)+"; threads: "+str(threads))
